#include <iostream>
#include<cmath>
using namespace std;
int main()
{
   int number = 0111;
   int count = 0;
   int power = 0;
   while(number > 0)
   {
      if(number & 1)
      {
          power += pow(2,count);
          count++;
      }
        number = number >> 1;
      
    }
   cout << power;
}

// 00000000

// 011
// 001
